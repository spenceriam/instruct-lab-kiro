# Environment Configuration Template
# Copy this file to .env.local for local development

# Application Environment
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_OPENROUTER_API_URL=https://openrouter.ai/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_MAX_STORAGE_SIZE=10485760

# Performance Configuration
NEXT_PUBLIC_MODEL_CACHE_TTL=3600000
NEXT_PUBLIC_MAX_RETRIES=3
NEXT_PUBLIC_RETRY_DELAY=1000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITOR=false

# Build Configuration
ANALYZE=false